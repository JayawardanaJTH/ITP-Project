@model IEnumerable<Project.Models.upload_file>
    @using Project.Models
    @{
        ViewBag.Title = "Uploaded Files";
    }

    <h2 class="text-center">Uploaded Files</h2>


    <table class=" table table-bordered table-striped table-responsive table-hover">

        <tr>
            <td>File ID</td>
            <td>File Name</td>
            <td>Upload Date</td>
            <td>Subject</td>
            <td>Grade</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.file_id</td>
                <td>@item.file_name</td>
                <td>@item.upload_date</td>
                <td>@item.subject</td>
                <td>@item.grade</td>
                @using (Html.BeginForm("Delete", "UploadFile", FormMethod.Post))
                {

                <td>@Html.ActionLink(" ", "Delete", new { id = @item.file_id }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })</td>
                }
                @using (Html.BeginForm("Edit", "UploadFile", FormMethod.Post))
                {

                <td>@Html.ActionLink(" ", "Edit", new { id = @item.file_id }, new { @class = "btn btn-success glyphicon glyphicon-edit" })</td>
                }
                


            </tr>
        }
    </table>


